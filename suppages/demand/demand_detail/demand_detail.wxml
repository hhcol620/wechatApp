  </view>
  <StoreList />
</view>
<!-- 底部栏目 需要固定到底部 -->
<view class="fixed_bottom">
  <van-goods-action>
    <van-goods-action-icon icon="good-job-o" text="超赞" bind:click="upFunc" />
    <van-goods-action-icon icon="chat-o" text="回复" bind:click="replyFunc" />
    <van-goods-action-icon icon="star-o" text="收藏" bind:click="collectFunc" />
    <van-goods-action-button color="#ff3f34" text="立即购买" bind:click="toPayFunc" />
  </van-goods-action>
</view>
<!-- 底部输入框 -->
<view class="input_box" wx-if="{{inputShow}}" style="bottom:{{keyBoardHeight}}">
  <van-cell-group>
    <van-field value="{{ sms }}" auto-focus="{{true}}" focus="{{true}}" clickable="{{true}}" center placeholder="看对眼要留言,问问更多的细节~" border="{{ false }}" use-button-slot cursor-spacing="{{10}}" bind:blur="inputBlur" bind:focus="inputFocus" adjust-position="{{false}}">
      <van-button slot="button" size="small" type="primary" bind:click="send">发送</van-button>
    </van-field>
  </van-cell-group>
</view>