<!-- suppages/store/creat_order/creat_order.wxml -->
<!-- 订单页加一个彩条 -->
<view class="border_colours" hover-class="none" hover-stop-propagation="false" />
<!-- 用户信息模块 -->
<view class="userInfo" hover-class="none" hover-stop-propagation="false">
	<van-row>
		<van-col span="6">
			<view class="nickName" hover-class="none" hover-stop-propagation="false">张三李四</view>
			<view class="default_b" hover-class="none" hover-stop-propagation="false">
				<van-button type="primary" plain size="mini">默认</van-button>
			</view>
		</van-col>
		<van-col span="18">
			<view class="head" hover-class="none" hover-stop-propagation="false">
				<van-row>
					<van-col span="18">
						<view class="tel">17777777777</view>
					</van-col>
					<van-col span="6">
						<view class="edit" hover-class="none" hover-stop-propagation="false">
							<!-- <text class=""></text> -->
							<van-icon name="edit" />
							修改
						</view>
					</van-col>
				</van-row>
			</view>
			<view class="foot" hover-class="none" hover-stop-propagation="false">
				内蒙古科技大学23号楼 966宿舍 张三收
			</view>
		</van-col>
	</van-row>
</view>
<!-- 商品信息 -->
<view class="commity_b">
	<view class="nickName" hover-class="none" hover-stop-propagation="false">买家昵称</view>
	<van-card
	 num="1"
	 price="10.00"
	 desc="描述信息"
	 title="商品标题"
	 thumb="{{ imageURL }}"
	 lazy-load="{{true}}"
	>
		<view slot="tags" class="tags">
			<van-tag plain type="warning">标签</van-tag>
			<van-tag plain type="warning">标签</van-tag>
		</view>
	</van-card>
</view>
<!-- 订单详情 -->
<view class="order_b" hover-class="none" hover-stop-propagation="false">
	<van-cell-group>
		<van-cell title="订单号" value="9999999999999999" />
		<van-cell
		 title="单元格"
		 value="内容"
		 label="描述信息"
		 border="{{ false }}"
		/>
	</van-cell-group>
</view>
<!-- 填写留言 -->
<view class="leaveM">
	<van-cell-group>
		<van-field
		 value="{{ message }}"
		 label="留言"
		 type="textarea"
		 placeholder="给卖家留言"
		 autosize
		 border="{{ false }}"
		/>
	</van-cell-group>
</view>
<view class="" hover-class="none" hover-stop-propagation="false">
	<van-submit-bar price="{{ 3050 }}" button-text="提交订单" bind:submit="onSubmit" />
</view>
<!-- view 弹出层 -->
<view class="popup">
	<van-popup
	 round
	 z-index='999'
	 show="{{ pay_type_show }}"
	 position="bottom"
	 custom-style="height: 50%"
	 bind:close="payType_onClose"
	>
		<view class="title">请选择支付方式</view>
		<view class="cell_checkoutBox" hover-class="none" hover-stop-propagation="false">
			<van-radio-group value="{{ radio }}" bind:change="onChange">
				<van-cell-group>
					<van-cell
					 title="微信支付"
					 clickable
           icon="https://ae01.alicdn.com/kf/H04b7651c5d724b75bcfc1494c5fa16a7G.jpg"
					 data-name="1"
					 bind:click="onClick">
						<van-radio slot="right-icon" name="1" />
					</van-cell>
					<van-cell
					 title="支付宝"
					 clickable
           icon="https://ae01.alicdn.com/kf/H49955f801b194e09926c0e0383fa4af5U.jpg"
					 data-name="2"
					 bind:click="onClick">
						<van-radio slot="right-icon" name="2" />
					</van-cell>
				</van-cell-group>
			</van-radio-group>
		</view>
    <!-- 去付款 -->
    <view class="confirm">
      <view bind:tap="confirm">
        去付款
      </view> 
    </view> 
	</van-popup>
</view>

