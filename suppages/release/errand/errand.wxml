<view class="container">
  <!-- 描述 -->
  <view class="desc">
    <view class="tip">描述</view>
    <view class="content_box">
      <textarea show-confirm-bar="{{false}}" value="{{mian_desc}}" data-name="mian_desc" bindinput="getInputData" placeholder="请输入您的宝贝最全的描述"></textarea>
    </view>
  </view>
  <view class="requirement">
    <view class="tip">要求</view>
    <view class="content_box">
      <textarea show-confirm-bar="{{false}}" value="{{requirement}}" data-name="requirement" bindinput="getInputData" placeholder="请输入您对跑手的要求"></textarea>
    </view>
  </view>
  <!-- 价格 -->
  <view class="price">
    <view class="tip">价格</view>
    <view class="price_content">
      <input class="weui-number" value="{{price}}" data-name="price" bindinput="getInputData" type="number" placeholder="请输入您提供佣金的金额" />
    </view>
  </view>
  <!-- 这个位置放一个小提示 提醒用户下面的信息属于隐私类信息 我们不会直接提供显示给每一个用户  只有接单的人才允许收到这部分数据 -->
  <view class="mini_tip">小提示 : 下面的信息请放心填写,我们会只提供给接单人,不会直接显示到页面上</view>
  <view class="tel">
    <view class="tip">手机</view>
    <view class="tel_content">
      <input class="weui-number" value="{{telNum}}" data-name="telNum" bindinput="getInputData" type="number" placeholder="请如实填写,方便跑手及时能联系到您" />
    </view>
  </view>
  <view class="address">
    <view class="tip">地址</view>
    <view class="tel_content">
      <input class="weui-number" value="{{address}}" data-name="address" bindinput="getInputData" type="number" placeholder="请如实填写,方便跑手准确送到货物" />
    </view>
  </view>
  <!-- 备注信息 -->
  <view class="remark">
    <view class="tip">备注</view>
    <view class="content_box">
      <textarea show-confirm-bar="{{false}}" value="{{remark}}" data-name="remark" bindinput="getInputData" placeholder="请输入您的备注信息，比如快递柜取件码，快递手机号，快递单号之类的"></textarea>
    </view>
  </view>
</view>
<!-- 这个提交需要跳转到支付接口   先支付才可以发布成功 -->
<view class="submitBtn">
  <van-button type="primary" size="normal" bind:click="submit_btn">立即发布</van-button>
</view>
<!-- 在页面内顶部的提示 失败提示 -->
<van-notify id="van-notify" />
<!-- 成功提示 -->
<van-dialog id="van-dialog" />