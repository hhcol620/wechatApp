      <text class="tag">自行车</text>
      <text class="tag">自行车</text>
      <text class="tag">自行车</text>
    </view>
  </view>
  <view class="store_forum_commponents" hover-class="none" hover-stop-propagation="false" wx:elif="{{selectValue != 0}}">
    <!-- 商城列表 -->
    <StoreList wx:if="{{selectValue == 1}}"></StoreList>
    <!-- 论坛列表 -->
    <ForumList wx:elif="{{selectValue == 2}}"></ForumList>
  </view>
</view>