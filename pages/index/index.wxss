.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper swiper image {
  width: 100%;
}
view.submenu {
  margin-top: 30rpx;
}
view.submenu ul {
  display: flex;
  justify-content: center;
  align-items: center;
}
view.submenu ul li {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  list-style: none;
}
view.submenu ul li view.icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--iconALIColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
view.submenu ul li view.icon text {
  text-align: center;
  color: #fff;
}
view.submenu ul li view.text {
  margin-top: 20rpx;
}
view.submenu ul li view.text text {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 26rpx;
  text-align: center;
  color: #333;
}
view.submenu ul li:nth-child(1) view.icon {
  background-color: var(--iconALIColor);
}
view.submenu ul li:nth-child(2) view.icon {
  background-color: var(--iconORAColor);
}
view.submenu ul li:nth-child(3) view.icon {
  background-color: var(--iconAMEColor);
}
view.submenu ul li:nth-child(4) view.icon {
  background-color: var(--iconPETColor);
}
view.submenu ul li:nth-child(5) view.icon {
  background-color: var(--iconTURColor);
}
view.inform_plate {
  margin: 50rpx;
}
view.inform_plate .title {
  line-height: 50rpx;
  font-size: 38rpx;
  color: #333;
  font-weight: 500;
  font-style: normal;
  padding-left: 10rpx;
  border-left: 6rpx solid var(--themeColor);
}
view.inform_plate view.item {
  margin-top: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--borderColor);
}
view.inform_plate view.item view.headline {
  font-size: 28rpx;
  line-height: 36rpx;
  font-weight: 500;
  color: #4d4d4d;
  font-style: normal;
}
view.inform_plate view.item view.image_b {
  margin-top: 20rpx;
  width: 100%;
}
view.inform_plate view.item view.image_b image {
  width: 100%;
  height: 360rpx;
  border-radius: 6rpx;
}
view.inform_plate view.item view.footer {
  margin-top: 10rpx;
  display: flex;
}
view.inform_plate view.item view.footer > view {
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: 500;
  font-style: normal;
  color: #666;
}
view.inform_plate view.item view.footer .tip {
  margin-right: 20rpx;
  color: var(--iconALIColor);
}
view.advertising {
  margin: 50rpx;
}
view.advertising .title {
  line-height: 50rpx;
  font-size: 38rpx;
  color: #333;
  font-weight: 500;
  font-style: normal;
  padding-left: 10rpx;
  border-left: 6rpx solid var(--themeColor);
}
view.advertising .advertising_b {
  margin-top: 20rpx;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-between;
}
view.advertising .advertising_b .item {
  width: 32%;
  height: 300rpx;
  background-color: #fafafa;
  margin-bottom: 10rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
view.advertising .advertising_b .item image {
  width: 100%;
  height: 180rpx;
  border-radius: 6rpx;
}
view.advertising .advertising_b .item .desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  font-weight: 500;
  color: #4d4d4d;
  font-style: normal;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
view.advertising .advertising_b .item .view_more {
  font-size: 24rpx;
  line-height: 30rpx;
  font-weight: 500;
  color: #0984e3;
  font-style: normal;
}
