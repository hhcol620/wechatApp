page {
  background-color: #f5f5f5;
}
.head {
  padding: 30rpx 0;
  background-color: #fff;
}
.head .card {
  margin: 0 20rpx;
  padding: 20rpx;
  min-height: 260rpx;
  border-radius: 10rpx;
  background-color: var(--themeColor);
  display: flex;
}
.head .card .headImg {
  width: 150rpx;
  height: 150rpx;
}
.head .card .headImg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.head .card .nickName_real_sign {
  padding: 0 20rpx;
  flex: 1;
}
.head .card .nickName_real_sign .nickName_real {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 60rpx;
  font-style: normal;
  display: flex;
  justify-content: space-between;
}
.head .card .nickName_real_sign .nickName_real .nickName {
  width: 300rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.head .card .nickName_real_sign .nickName_real .real {
  font-size: 26rpx;
  font-weight: 400;
}
.head .card .nickName_real_sign .sign {
  margin-top: 20rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 30rpx;
  font-style: normal;
  font-weight: 500;
  border-radius: 21rpx;
  padding: 6rpx 10rpx;
  border: 1px solid #fff;
}
.main {
  margin-top: 20rpx;
}
.main .item {
  background-color: #fff;
  margin-top: 10rpx;
}
.main .item .title {
  padding: 0 20rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  font-weight: 600;
  color: #4d4d4d;
  font-style: normal;
}
.main .item .container .iconfont {
  font-size: 40rpx;
  color: #4d4d4d;
}
.main .item .container button.iconfont {
  font-size: 40rpx;
  background-color: #fff;
  color: #666;
  line-height: 70rpx;
}
.main .item .container button.iconfont::after {
  border: none;
}
.main .item .container button.text {
  font-size: 24rpx;
  background-color: #fff;
  color: #666;
  line-height: 30rpx;
}
.main .item .container button.text::after {
  border: none;
}
