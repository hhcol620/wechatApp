<view class="container">
  <view class="item" wx:for="{{arrList}}" wx:for-index="index" wx:for-item="item" wx:key="id">
    <view class="head">
      <view class="creatTime">下单时间: {{item.createTime}}</view>
      <!-- <view class="countDown">
        订单自动关闭:
        <van-count-down time="{{ time }}" format="HH 时 mm 分 ss 秒" />
      </view> -->
    </view>
    <view class="main">
      <view class="desc">
        <view class="goodsDesc">物品描述: {{item.content}}</view>
        <view class="emit">要求: {{item.requirement}}</view>
        <view class="price_box">
          悬赏金额:
          <view class="price">￥ {{item.money}}</view>
        </view>
      </view>
    </view>
    <view class="footer">
      <view class="viewDetail">
        <van-button round type="primary" size="mini" bind:click="To_errand_detail" data-id="{{item.id}}">
          查看详情
        </van-button>
      </view>
    </view>
  </view>
</view>