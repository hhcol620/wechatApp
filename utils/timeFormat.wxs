// 这里写wxs代码  将时间格式化为多久之前  例如 两天前  1分钟前 几个小时之前
// 传进来一个时间参数   后台传过来的格式为 2020-04-13 15:09:31
var time_for = function (time) {
  var stringTime = time;
  var dateTimeStamp = Date.parse(stringTime)
  // console.log(Date.parse(stringTime));
    var minute=1000*60;      //把分，时，天，周，半个月，一个月用毫秒表示
    var hour=minute*60;
    var day=hour*24;
    var week=day*7;
    var month = day * 30;
    var result;

    var now = Date.now()   //获取当前时间毫秒
    var diffValue = now - dateTimeStamp;//时间差
  
    if(diffValue<0){return;}

    var  minC=diffValue / minute;  //计算时间差的分，时，天，周，月
    var  hourC=diffValue / hour;
    var  dayC=diffValue / day;
    var  weekC=diffValue / week;     
    var  monthC=diffValue / month;

    if(monthC>=1){
      result="" + parseInt(monthC) + "月前";
    }
    else if(weekC>=1){
      result="" + parseInt(weekC) + "周前";
    }
    else if(dayC>=1){
      result=""+ parseInt(dayC) +"天前";
    }
    else if(hourC>=1){
      result=""+ parseInt(hourC) +"小时前";
    }
    else if(minC>=1){
      result=""+ parseInt(minC) +"分钟前";
    }else
    result="刚刚";
    return result;
}

module.exports = {
  time_for: time_for
};